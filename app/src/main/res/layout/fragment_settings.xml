<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SettingsFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <ImageView
                android:id="@+id/cover_image_setting"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cover"
                android:scaleType="centerCrop"
                >

            </ImageView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_settings"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile"
                >
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/username_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名前"
                android:layout_below="@+id/profile_image_settings"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                >
            </TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv1"
        android:gravity="center"
        android:background="@color/colorProfile"
        android:orientation="horizontal"
        android:padding="6dp"
        >

        <ImageView
            android:id="@+id/set_facebook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/facebook"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center"
            >
        </ImageView>

        <ImageView
            android:id="@+id/set_instagram"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/instagram"
            android:scaleType="centerCrop"
            android:layout_marginRight="35dp"
            android:layout_gravity="center"
            >
        </ImageView>

        <ImageView
            android:id="@+id/set_website"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/web"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            >
        </ImageView>


        <ImageView
            android:id="@+id/set_leader"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/leader"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            >
        </ImageView>

        <ImageView
            android:id="@+id/set_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/loupe"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            >
        </ImageView>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/set">
    <TextView
        android:id="@+id/set_introduction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/set"
        android:layout_marginTop="20dp"
        android:text="内容"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

    </TextView>
</ScrollView>

</RelativeLayout>